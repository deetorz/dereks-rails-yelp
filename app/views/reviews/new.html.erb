<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <h1>Add a review</h1>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit 'Add', class: 'btn-red mt-2' %>
      <% end %>
    </div>
  </div>
</div>
